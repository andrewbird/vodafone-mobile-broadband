#!/usr/bin/env python

import os
from subprocess import Popen, PIPE, call
import sys

import dbus
import gtk
from twisted.python.procutils import which

from wader.common.utils import save_file, get_file_data
from wader.vmc.controllers.main import MainController
from wader.vmc.models.main import MainModel
from wader.vmc.views.main import MainView
from wader.vmc.consts import GTK_LOCK, APP_LONG_NAME

def check_if_running():
    if not os.path.exists(GTK_LOCK):
        # if there's no lock we're cool
        return False

    cmd = "ps aux | grep 'wader-vmc' | grep -v grep | grep python | awk '{ print $2 }'"
    pipe = Popen(cmd, shell=True, stdout=PIPE).stdout
    pid = pipe.read().strip()
    if not pid:
        return False

    saved_pid = get_file_data(GTK_LOCK).strip()
    if not saved_pid:
        # this shouldn't happen
        return False

    pids = pid.split('\n')
    if len(pids) > 1:
        # there's already a window running, plus us
        return True

    return int(pid) == int(saved_pid)

def raise_window():
    try:
        wmctrl_path = which('wmctrl')[0]
    except KeyError:
        raise RuntimeError("Cannot find wmctrl binary")
    else:
        call(["%s" % wmctrl_path, "-a", "%s" % APP_LONG_NAME])

def main():
    from wader.vmc.splash import SplashScreen
    splash = SplashScreen()
    splash.show_it(2)

    from wader.vmc.startup import create_skeleton_and_return
    create_skeleton_and_return()

    model = MainModel()
    ctrl = MainController(model)
    # XXX: :P
    model.ctrl = ctrl
    view = MainView(ctrl)

    view.show()

    # save the pid
    try:
        os.unlink(GTK_LOCK)
    except:
        pass

    save_file(GTK_LOCK, "%s" % str(os.getpid()))

    try:
        gtk.main()
    except KeyboardInterrupt:
        print "Removing gtk lock..."
        os.unlink(GTK_LOCK)

if __name__ == '__main__':
    if check_if_running():
        raise_window()
    else:
        main()

